echo "Enter first number:"
read x
echo "Enter second number:"
read y 
echo "Menu: 1.Addition  2.Subtraction   3.Multiplication   4.Division"
read op
case $op in 
	1) rs=$(($x+$y))
	   echo "Sum is:"$rs;;
	2) rs=$(($x-$y))
	   echo "Difference is:"$rs;;
	3) rs=$(($x*$y))
	   echo "Product is:"$rs;;
	4) rs=$(($x/$y))
	   echo "Quotient is:"$rs;;
	*) echo "Invalid choice";;
esac	
	   
